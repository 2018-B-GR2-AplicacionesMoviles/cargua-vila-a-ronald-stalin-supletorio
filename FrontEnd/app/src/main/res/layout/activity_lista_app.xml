<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ListaAPPActivity">
    <Button
            android:text="@string/btn_nueva_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_nuevo_app" android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <LinearLayout android:layout_width="380dp"
                  android:layout_height="151dp"
                  tools:ignore="MissingConstraints"
                  android:orientation="vertical"
                  android:background="@color/colorPrimaryDark"
                  android:id="@+id/linearLayout" android:layout_marginTop="24dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="1.0">

        <TextView
                android:text="Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nombre_APP"
                android:textColor="@color/alert_default_text_color" android:layout_margin="5dp"
                android:layout_marginBottom="5dp" android:layout_marginEnd="5dp" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" android:layout_marginStart="5dp" android:layout_marginTop="5dp"/>
        <TextView
                android:text="Version API"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nombre_APP2"
                android:textColor="@color/alert_default_text_color" android:layout_margin="5dp"
                android:layout_marginBottom="5dp" android:layout_marginEnd="5dp" android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" android:layout_marginStart="5dp" android:layout_marginTop="5dp"/>
        <TextView
                android:text="Fecha Lanzamiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nombre_APP3"
                android:textColor="@color/alert_default_text_color" android:layout_margin="5dp"/>
        <TextView
                android:text="Peso en Gigas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nombre_APP4"
                android:textColor="@color/alert_default_text_color" android:layout_margin="5dp"/>
        <TextView
                android:text="Instalado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/nombre_APP5"
                android:textColor="@color/alert_default_text_color" android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="514dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:id="@+id/lista_ap"
            tools:layout_editor_absoluteX="0dp"
            tools:context=".ListaAPPActivity"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/btn_nuevo_app">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_lista_ap"
                android:textSize="18sp"
                android:layout_marginBottom="20dp"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/reciclerListaAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>