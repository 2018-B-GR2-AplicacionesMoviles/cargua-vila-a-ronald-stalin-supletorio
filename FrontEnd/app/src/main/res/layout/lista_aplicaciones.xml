<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:orientation="vertical"
                                             android:clickable="true"
                                             android:id="@+id/lista_app"
                                             android:foreground="?attr/selectableItemBackground"
                                             android:background="@color/colorPrimaryDark"
                                             android:baselineAligned="false"
                                             tools:layout_editor_absoluteY="86dp" tools:layout_editor_absoluteX="5dp"
                                             android:layout_margin="5dp">
    <TextView
            android:id="@+id/version_listaAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_api"
            android:textSize="14sp"
            android:textColor="@color/alert_default_text_color"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/peso_listaAP"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/nombre_listaAP"
    />
    <TextView
            android:id="@+id/nombre_listaAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="14sp"
            android:textColor="@color/alert_default_text_color"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/version_listaAP"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/lanzamiento_listaAP"
    />
    <TextView
            android:id="@+id/lanzamiento_listaAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fecha_lanzamiento"
            android:textSize="14sp"
            android:textColor="@color/alert_default_text_color"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/nombre_listaAP"
            app:layout_constraintBottom_toTopOf="@+id/costo_lista_ap"
            android:layout_marginBottom="13dp"/>
    <TextView
            android:id="@+id/peso_listaAP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/peso_gigas"
            android:textSize="14sp"
            android:textColor="@color/alert_default_text_color"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="16dp"
            app:layout_constraintVertical_chainStyle="spread_inside" android:layout_marginBottom="13dp"
            app:layout_constraintBottom_toTopOf="@+id/version_listaAP" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:id="@+id/url_lista_ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="URL descarga"
            android:textSize="14sp"
            android:textColor="@color/alert_default_text_color"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/costo_lista_ap" android:layout_marginBottom="8dp"/>

    <TextView
            android:id="@+id/costo_lista_ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Costo"
            android:textSize="14sp"
            android:textColor="@color/alert_default_text_color"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/lanzamiento_listaAP"
            android:layout_marginBottom="14dp" app:layout_constraintBottom_toTopOf="@+id/url_lista_ap"/>
</android.support.constraint.ConstraintLayout>