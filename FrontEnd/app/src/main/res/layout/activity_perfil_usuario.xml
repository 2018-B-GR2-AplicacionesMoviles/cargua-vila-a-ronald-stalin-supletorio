<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PerfilUsuarioActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="394dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="211dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/linearLayout3">
        <TextView
                android:text="Nombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_nombre_pu" android:layout_margin="15dp"
                android:textSize="30sp"/>
        <TextView
                android:text="Apellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_apellifo_pu" android:layout_margin="15dp"
                android:textSize="30sp"/>
        <TextView
                android:text="Fecha Nacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_fecha_pu" android:layout_margin="15dp"
                android:textSize="30sp"/>
        <TextView
                android:text="Correo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_correo_pu" android:layout_margin="15dp"
                android:textSize="30sp"/>
        <TextView
                android:text="Experiencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_experiencia_pu" android:layout_margin="15dp"
                android:textSize="30sp"/>
        <TextView
                android:text="Oro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_oro_pu" android:layout_margin="15dp"
                android:textSize="30sp"/>
    </LinearLayout>
    <Button
            android:text="@string/btn_regresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_regresar_menu" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.271"/>
</android.support.constraint.ConstraintLayout>